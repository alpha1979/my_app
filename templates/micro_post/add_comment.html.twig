{% extends 'base.html.twig' %}

{% block title %}Hello MicroPostController!{% endblock %}
{% block bread %}
-><a href="{{ path('app_micro_post_show', {post: post.id})}}">Post</a> comment
{% endblock %}
{% block body %}
<div class="example-wrapper">
   
   {{ include('micro_post/_post.html.twig', {post: post})}}
    {{form_start(form)}}
        <div> {{ form_errors(form) }} </div>
        <div>
            {{ form_label(form.text, 'Please enter the text', {'label_attr': {'class': 'block text-sm text-gray-700 font-medium'}})}}
            {{ form_widget(form.text, {'attr': { 'class': 'block w-full shadow-sm border-gray-300 rounded-md border p-2 mt-1 mb-2'}})}}
            {{ form_errors(form.text)}}
        </div>
        <div>
           <button type='submit' class='block w-full shadow-sm border-transparent bg-indigo-600 hover:bg-indigo-700 text-white rounded-md border p-2 mt-4 mb-2'>Submit</submit>
        </div>
    {{form_end(form)}}
    
</div>

{% endblock %}