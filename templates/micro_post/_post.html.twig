<div class="mb-4">
    <div class="text-2xl">
        <a href="{{path('app_micro_post_show', {post: post.id})}}">{{post.title}}</a>
    </div>
    <div class="text-xl">
       {{post.text}}
    </div>
    <div class="text-gray-500">
        {{post.created | date("d-m-Y")}}
    </div>
    <div>
        {% if post.likedBy.contains(app.user) %}
            <a href="{{ path('app_unlike', {id: post.id}) }}"> UnLike <span class="px-2 rounded-md bg-gray-200">{{post.likedBy.count}}</span></a>
        {% else %}
             <a href="{{ path('app_like', {id: post.id}) }}"> Like <span class="px-2 rounded-md bg-gray-200">{{post.likedBy.count}}</span></a>
        {% endif %}
    </div>
    <div>
        <a href="{{ path('app_profile', {id: post.author.id})}}">
        {{include('shared/_avatar.html.twig',{'size': 8, profile: post.author.userProfile})}}
        {{ post.author.email}}</a>
    </div>
    <div>
    <a href="{{ path('app_micro_post_edit', {post: post.id})}}"> Edit </a> |
    <a href="{{ path('app_micro_post_add_comment', {post: post.id})}}"> Comment{{ (post.comments.count > 1) ? 's' : '' }} </a><span class="px-2 rounded-md bg-gray-200">{{post.comments.count}}</span>
    </div>
</div>
