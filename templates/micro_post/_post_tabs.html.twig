{% embed "shared/_tabs.html.twig" %}
    {% block tabs %}
        {% embed "shared/_tab.html.twig" with { route: 'app_micro_post' } %}
            {% block content %}
               All posts
            {% endblock %}
            {% block path %}
                {{ path('app_micro_post')}}
            {% endblock %}
        {% endembed %}

        {% embed "shared/_tab.html.twig" with { route: 'app_micro_post_top_liked', classes:'ml-4' } %}
            {% block content %}
                Top Liked
            {% endblock %}
            {% block path %}
               {{ path('app_micro_post_top_liked' )}}
            {% endblock %}
        {% endembed %}

        {% embed "shared/_tab.html.twig" with { route: 'app_micro_post_follows', classes:'ml-4' } %}
            {% block content %}
                From people You follow
            {% endblock %}
            {% block path %}
                {{ path('app_micro_post_follows' )}}
            {% endblock %}
        {% endembed %}
    {% endblock %}
{% endembed %} 