{% extends 'base.html.twig' %}

{% block title %}User Image{% endblock %}
{% block bread %}
-> Profile Image
{% endblock %}
{% block body %}
    {{ include('setting_profile/_setting_profile_tabs.html.twig') }}
    <div class="flex items-center">
        {{ include('shared/_avatar.html.twig', {'size':32, profile: app.user.userProfile })}}
        <div class="ml-16 ">
        {{ form_start(form, { 'attr': {'novlidate': 'novalidate'}})}}
            {{form_label(form.profileImage, 'Change', {'label_attr': {'class':'shadow-sm border-transparent bg-gray-300 hover:bg-gray-400 curson-pointer rounded-md p-2'}})}}
            {{form_widget(form.profileImage, {'attr' : {'class':'hidden'}})}}
            {{ form_errors(form.profileImage)}}
        </div>
    </div>
        <div>
            <button type='submit' class='block w-full shadow-sm border-transparent bg-indigo-600 hover:bg-indigo-700 text-white rounded-md border p-2 mt-4 mb-2'>Upload Image</button>
        </div>
    {{form_end(form)}}
    
{% endblock %}
